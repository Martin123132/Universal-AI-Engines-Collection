                            <button class="add-btn" onclick="addStyle()">Add Style</button>
                        </div>
                    </div>
                    <div id="styleList"></div>
                </div>
            </div>
        </div>
        
        <!-- Event Pools Tab -->
        <div class="tab-content" id="pools">
            <div class="setup-grid">
                <div class="section">
