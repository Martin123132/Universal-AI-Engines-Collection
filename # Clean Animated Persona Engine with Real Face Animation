    def setup_did_api(self, button):
        """Setup D-ID API"""
        api_key = self.did_api_key_input.value.strip()
        
        if not api_key:
            with self.status_output:
                self.status_output.clear_output()
                print("âŒ Please enter your D-ID API key")
            return
        
        try:
            self.animation_engine.setup_did_api(api_key)
            
            with self.status_output:
                self.status_output.clear_output()
                print("âœ… D-ID API configured successfully!")
                print("ğŸ¬ Ready for professional face animation")
                
        except Exception as e:
            with self.status_output:
                self.status_output.clear_output()
                print(f"âŒ D-ID setup failed: {e}")
    
